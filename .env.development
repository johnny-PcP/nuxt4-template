# 開發環境配置

# 開發環境預設使用本地 API
NUXT_PUBLIC_IS_USE_LOCAL_API=true

# 開發環境預設顯示 console 訊息
NUXT_PUBLIC_IS_SHOW_CONSOLE=true

# 其他開發環境特定設定
NUXT_API_ENV=development

# API 超時設定（毫秒）
NUXT_PUBLIC_API_TIMEOUT=5000

# 全站 API 地址（當 NUXT_PUBLIC_IS_USE_LOCAL_API=false 時使用）
NUXT_PUBLIC_API_BASE_URL=https://docker.local/api